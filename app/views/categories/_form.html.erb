
<%= form_with(model: category) do |form| %>
  <%= error_form(category) %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class:'form-control'  %>
  </div>

  <div class="form-group">
    <%= form.label :priority %>
    <%= form.number_field :priority, value: '1',min: '1', max: '9', class:'form-control'  %>
  </div>

  <div class="actions">
    <%= form.submit 'Save', class: 'btn btn-primary btn-block'%>
  </div>
<% end %>
