<div class="col-md-6 m-md-0 m-3 p-0 category-article">
  <div class="card border-0 rounded-0 m-0 p-0">
    <div class="row no-gutters">
      <div class="col-md-6">
        <%= image_show article %>
      </div>
      <div class="col-md-6">
        <div class="card-body">
          <div class="d-flex justify-content-between">
          <h5 class="card-title"><%= article.title %></h5>
          <h3><%= vote_btn(article) %></h3>
          </div>
          <div>
          <small class="text-muted">published <%= time_ago_in_words(article.created_at) %> ago </small>
           </div>

          <small class="text-muted mt-5">Written By <%= article.author.name %>
            <%= article_buttons(article) %></small>
          <p class="card-text"><%= truncate(strip_tags(article.text.to_plain_text), :length => 150) %></p>
          <p class="card-text"></p>

          <div class="d-flex justify-content-end align-items-center mt-5 for-btn">
          <%= link_to "Read More", article_path(article), class: 'btn btn-primary' %>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>

