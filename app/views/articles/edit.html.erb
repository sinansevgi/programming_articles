<div class="card p-5 m-2">
  <h1>Editing Article</h1>
  <%= render 'form', article: @article %>
</div>

<div class="my-3 justify-content-end d-flex">
  <div class="mx-1"><%= link_to 'Destroy', @article, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'  %></div>
  <div class="mx-1"><%= link_to 'Show', @article, class: 'btn btn-primary'  %></div>
  <div class="mx-1"><%= link_to 'Back', @article, class: 'btn btn-secondary' %></div>
</div>