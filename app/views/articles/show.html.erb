<div class="row">
  <div class="col-md-10 offset-md-1 text-center">
    <div class="card p-2 m-5">
      <%= image_show(@article) %>
      <div class="card-title">  <h1><%= @article.title %></h1></div>
      <small class="text-muted">Written By <%= @article.author.name %>
        <%= article_buttons(@article) %></small>
      <div class="card-body">
       <%= @article.text %>
      </div>
      <div class="d-flex justify-content-end"><h1><%= vote_btn(@article) %></h1></div>
    </div>




  </div>
</div>